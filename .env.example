# ChloroMaster Environment Variables - Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_CONNECTION_STRING=Data Source=/app/data/chloromaster.db

# Security Configuration
SECURITY_PASSWORD_SALT=your_random_salt_here_change_in_production
ADMIN_DEFAULT_PASSWORD=change_this_password

# Admin Account
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_FULLNAME=Administrator

# Current Admin Password (Update after first login)
ADMIN_PASSWORD=generate_strong_password_here
ADMIN_PASSWORD_HASH=will_be_generated_after_password_set

# JWT Configuration
JWT_SECRET_KEY=generate_random_jwt_secret_min_32_chars
JWT_EXPIRY_HOURS=24

# SMTP Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=ChloroMaster
SMTP_USE_SSL=true
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# API Configuration
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_LOGIN_ATTEMPTS_PER_MINUTE=5
RATE_LIMIT_CONTACT_SUBMISSIONS_PER_HOUR=10

# Logging Configuration
LOG_LEVEL=Information
LOG_PATH=/app/logs

# Environment
ASPNETCORE_ENVIRONMENT=Production

# Legacy (for backward compatibility)
REACT_APP_API_URL=http://localhost:5000/api
SA_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
GF_SECURITY_ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
JWT_KEY=REPLACE_WITH_SECURE_KEY